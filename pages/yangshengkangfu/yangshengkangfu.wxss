/* 养生拳 */

.zd{
  background: #eee;
}
.li{
  background: #fff;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  padding:30rpx 20rpx 30rpx 30rpx;
}
.toggle{
  font-size:32rpx;
  border-bottom: 1rpx solid #eee;
}
.li-align{
  display: flex;
  align-content: center;
  align-items: center;
}
.content{
  font-size: 24rpx; 
  color: #6f6f6f;
  padding-right:50rpx;   
}
.li-wrap .line{
  border-bottom: 1rpx solid #eee;
}
.entry{
  width:18rpx;
  height:32rpx;
  margin-left: 20rpx;
}
.txt{
  text-align:center;
}

.zd-title {
  width: 200px;
  height: 25px;
  margin:0 auto;
  text-align: center;
  padding: 5px;
  border-radius: 10px;
  background-color: #ea1515;
  
}
.img{
  justify-content:center;
  width: 100%;

}
.isBlock {
  display: none;
}



.swiper-tab {
  width: 100%;
  border-bottom: 1px solid gray;
  text-align: center;
  line-height: 31px;
  display: flex;
}

.swiper-tab-list {
  display: inline-block;
  width: 33%;
  color: gray;
}

.xuanzhong {
  color: tomato;
  border-bottom: 3px solid tomato;
}
/* 药膳 */
.zuixin {
  display: flex;
  flex-wrap: wrap;/*  换行 */
  width: 100%;
  background-color: white;
}

.zuixin-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  padding: 5px;
  box-sizing: border-box;
  border-bottom: 1px dotted gainsboro;
}

.zuixin-img {
  width: 100%;
  height: 100px;
  border: 1px solid #fcfcfc;
  border-radius: 5px;
  box-shadow: 0 2px 2px gainsboro;
  padding: 5px;
  box-sizing: border-box;
}

.zuixin-mc {
  font-size: 15px;
  padding: 3px;
  text-align: center;
  white-space: nowrap; /*不换行*/
  overflow: hidden;
  text-overflow: ellipsis;
}

.zuixin-redu {
  text-align: center;
  padding: 3px;
 color:#FA7E3E;
  font-size: 10px;
}

/* 经脉帮 */

