.a {
  display: flex;
  flex-direction: column; /*从上到下*/
  width: 100%;
  padding: 5px;
  box-sizing: border-box;
}
.title {
  text-align: center;
  border-top:10p;
  border-bottom: 10px;
  font-weight: bold;
}

.img {
  box-shadow: 0px 2px 2px gainsboro;
  width: 100%;
  height: 100px;
  box-sizing: border-box;
  margin-top: 5px;
  margin-bottom: 15px;
}
.name {
  border-bottom: 1px solid gainsboro;
  font-size: 14px;
  line-height: 30px;
}

.name1 {
  border-bottom: 1px solid gainsboro;
