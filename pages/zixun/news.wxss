.zixun-item {
  background-color: white;
  display: flex;
  padding: 5px;
  width: 100%;
  border-bottom: 2px solid #F4F4F1;
  /* border-bottom: 2px;   */
}

.zixun-tupian {
  width: 30%;
}
.zixun-img {
  width: 100%;
  border: 1px solid gainsboro;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
}

.zixun-xinxi {
  width: 70%;
  margin-left: 5px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.zixun-title {
  font-size: 13px;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.zixun-laiyuan {
  font-size: 13px;
  color: gray;
  margin: 3px 0;
}
